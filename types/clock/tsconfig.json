{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "target": "esnext",
    "outDir": "dist",
    "module": "esnext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/ts/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
